{
	"name": "dota-wordle",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"client": "npm run serve --prefix client",
		"heroku-postbuild": "npm install --prefix client && npm run build --prefix client",
		"start": "node server/server.js"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"core-js": "^3.6.5",
		"sass": "^1.26.5",
		"sass-loader": "^8.0.2",
		"vue": "^3.0.0"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^5.0.4",
		"@vue/cli-plugin-router": "^5.0.4",
		"@vue/cli-plugin-vuex": "^5.0.4",
		"@vue/cli-service": "^5.0.4",
		"@vue/compiler-sfc": "^3.0.0",
		"sass": "^1.26.5",
		"sass-loader": "^8.0.2"
	},
  "eslintConfig": {
    "root": false,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead"
	]
}
